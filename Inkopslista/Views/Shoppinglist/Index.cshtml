@using Microsoft.Ajax.Utilities
@model IEnumerable<Inkopslista.Models.Shoppinglist>

@{
    ViewBag.Title = "Inköpslista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inköpslista</h2>

<h4>@Html.ActionLink("Ny inköpslista", "New", "Shoppinglist", null, new { @class = "btn btn-primary" }) </h4>

<table id="shoppinglists" class="table table-bordered table-hover">
    <thead>
    <tr bgcolor="#f5f5f5">
        <th>Inköpslista:</th>
        <th>Ändra</th>
    </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
                $("#shoppinglists").DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Swedish.json"
                },    

                    ajax: {
                        type: "GET",
                        url: "/api/shoppinglists/get",
                        datatype: "json",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name",
                            render: function(data, type, shoppinglist) {
                                return "<img src='../../Icons/shoppinglist.svg' width='15' height='15'>" +
                                "<a href='/Shoppinglist/Details/" + shoppinglist.id + "'>" + shoppinglist.name + "</a>";
                            }
                        },
                        {
                            data: "id",
                            render: function(data) {
                                return "<button class='btn-link js-delete' " +
                                    "data-shoppinglist-id=" + data + ">" +
                                    "<img src = '../../Icons/delete.svg' / " +
                                "width='15' height='15' style='vertical-align:top'></button>";
                            },
                            sortable: false
                        }
                    ]
                }),

                $("#shoppinglists").on("click",
                    ".js-delete",
                    function() {
                    var button = $(this);

                    bootbox.confirm("Are you sure you want to delete this shoppinglist?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/shoppinglists/" + button.attr("data-shoppinglist-id"),
                                    method: "DELETE",
                                    success: function() {
                                        button.parents("tr").remove();
                                    }
                                });
                            }
                        });
                    });
                });
    </script>
}