@using Microsoft.Ajax.Utilities
@model IEnumerable<Inkopslista.Models.Shoppinglist>

@{
    ViewBag.Title = "Inköpslista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inköpslista</h2>

<h4>@Html.ActionLink("Ny inköpslista", "New", "Shoppinglist", null, new { @class = "btn btn-primary" }) </h4>

@if (Model.Count() == 0)
{
    <p>Inga inköpslistor i listan än.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr bgcolor="#f5f5f5">
                <th>Inköpslista:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shopList in Model)
            {
            <tr>
                <td>
                    @Html.ActionLink(shopList.Name, "Details", "Shoppinglist", new { id = shopList.Id }, null)
                </td>
            </tr>
            }
        </tbody>
    </table>
}