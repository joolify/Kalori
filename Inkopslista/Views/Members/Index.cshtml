@model IEnumerable<Inkopslista.Models.Member>

@{
    ViewBag.Title = "Members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Members</h2>

<h4>@Html.ActionLink("New Member", "New", "Members", null, new { @class = "btn btn-primary"})</h4>

<table id="members" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Member</th>
        <th>Membership Type</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            table = $("#members").DataTable({
                ajax: {
                    url: "/api/members/Get/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function(data, type, member) {
                            return "<a href='/members/edit/" + member.id + "'>" + member.name + "</a>";
                        }
                    },
                    {
                        data: "name"
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn-link js-delete' data-member-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#members").on("click", ".js-delete",
                function() {
                    var button = $(this);

                    bootbox.confirm("Är du säker att du vill ta bort denna medlem?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/members/Delete/" + button.attr("data-member-id"),
                                    method: "DELETE",
                                    success: function() {
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                                });
                            }
                        });
                });
        });
    </script>
}